<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/change_concern"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="取消"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="记录修改"
            android:textSize="18sp" />

        <Button
            android:id="@+id/change_agree"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="修改"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4E1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="设置日期"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/date_select_c"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改日期"
            android:textSize="20sp" />

        <Button
            android:id="@+id/date_today_c"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:text="今天"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_record_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4E1"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="设置餐别"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RadioGroup
            android:id="@+id/fo_group_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/fo_breakfast_c"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早餐" />

            <RadioButton
                android:id="@+id/fo_beforeL_c"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午茶" />

            <RadioButton
                android:id="@+id/fo_lunch_c"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中餐" />

            <RadioButton
                android:id="@+id/fo_afterL_c"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下午茶" />

            <RadioButton
                android:id="@+id/fo_dinner_c"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚餐" />

            <RadioButton
                android:id="@+id/fo_anytime_c"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="间点" />

        </RadioGroup>

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4E1"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="设置餐量"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/food_size_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedrectangle"
            android:digits="0123456789"
            android:maxLength="5" />

        <TextView
            android:id="@+id/size_unit_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/food_size_energy_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:hint="热量"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>