<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5E6"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/add_concern"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="取消"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="记录添加"
            android:textSize="18sp" />

        <Button
            android:id="@+id/add_agree"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="添加"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4E1"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="日期"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/date_select"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"
            android:textSize="20sp" />

        <Button
            android:id="@+id/date_today"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:text="今天"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4E1"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="餐别"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RadioGroup
            android:id="@+id/fo_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/fo_breakfast"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早餐" />

            <RadioButton
                android:id="@+id/fo_beforeL"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午茶" />

            <RadioButton
                android:id="@+id/fo_lunch"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中餐" />

            <RadioButton
                android:id="@+id/fo_afterL"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下午茶" />

            <RadioButton
                android:id="@+id/fo_dinner"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚餐" />

            <RadioButton
                android:id="@+id/fo_anytime"
                style="@style/foClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="间点" />

        </RadioGroup>

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4E1"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="单位"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RadioGroup
            android:id="@+id/dynamicButtonUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </RadioGroup>

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4E1"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="餐量"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/food_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedrectangle"
            android:digits="0123456789"
            android:maxLength="5"
            android:text="100" />

        <TextView
            android:id="@+id/size_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="克"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/food_size_energy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:hint="热量"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>